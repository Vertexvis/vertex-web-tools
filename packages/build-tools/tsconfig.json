{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["node", "jest"],

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["ES2018"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
